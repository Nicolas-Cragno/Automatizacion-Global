		System.out.println("|1) Se abre la pagina principal de Global              |");
		helpers helper = new helpers();
		helper.stopTime(2);
	}
	@Test
	public void pruebaUno() {
		PageLogin pageLogin = new PageLogin(driver);
		pageLogin.login("user name", "user@user.com", "Automatizaci贸n", "Esta es una automatizaci贸n hecha con Java y Selenium", "wXyZ");
		Assert.assertTrue(driver.findElement(By.xpath("//*[@id=\"wpcf7-f1297-p370-o1\"]/form/div[2]")).getText().contains("Ocurri贸 un error de validaci贸n."));
	}
	@AfterMethod
	public void tearDown() {
		driver.close();
	}
}
